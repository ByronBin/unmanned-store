<!--pages/profile/profile.wxml-->
<view class="container">
  <view class="user-info">
    <image class="avatar" src="{{userInfo.avatar || '/images/default-avatar.png'}}" />
    <view class="info">
      <text class="nickname">{{userInfo.nickname || '未登录'}}</text>
      <text class="phone">{{userInfo.phone || ''}}</text>
    </view>
  </view>

  <view class="stats">
    <view class="stat-item">
      <text class="stat-value">{{userInfo.points || 0}}</text>
      <text class="stat-label">积分</text>
    </view>
    <view class="stat-item">
      <text class="stat-value">{{userInfo.couponCount || 0}}</text>
      <text class="stat-label">优惠券</text>
    </view>
    <view class="stat-item">
      <text class="stat-value">{{userInfo.memberLevel || 0}}</text>
      <text class="stat-label">等级</text>
    </view>
  </view>

  <view class="menu-list">
    <navigator class="menu-item" url="/pages/orders/orders">
      <text class="menu-title">我的订单</text>
      <text class="menu-arrow">></text>
    </navigator>
    
    <navigator class="menu-item" url="/pages/coupons/coupons">
      <text class="menu-title">我的优惠券</text>
      <text class="menu-arrow">></text>
    </navigator>
    
    <navigator class="menu-item" url="/pages/address/address">
      <text class="menu-title">收货地址</text>
      <text class="menu-arrow">></text>
    </navigator>
    
    <view class="menu-item" bindtap="openSettings">
      <text class="menu-title">设置</text>
      <text class="menu-arrow">></text>
    </view>
  </view>

  <button class="logout-btn" wx:if="{{isLoggedIn}}" bindtap="logout">退出登录</button>
</view>
