/* pages/cart/cart.wxss */
.cart-list {
  padding: 20rpx;
  margin-bottom: 120rpx;
}

.cart-item {
  display: flex;
  align-items: center;
  background-color: #fff;
  border-radius: 8rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
}

.item-checkbox {
  margin-right: 20rpx;
}

.item-image {
  width: 160rpx;
  height: 160rpx;
  border-radius: 8rpx;
  margin-right: 20rpx;
}

.item-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.item-name {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 20rpx;
}

.item-bottom {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.item-price {
  font-size: 32rpx;
  color: #ff4d4f;
  font-weight: bold;
}

.item-counter {
  display: flex;
  align-items: center;
}

.counter-btn {
  width: 48rpx;
  height: 48rpx;
  line-height: 48rpx;
  padding: 0;
  background-color: #f5f5f5;
  font-size: 28rpx;
}

.counter-num {
  margin: 0 20rpx;
  font-size: 28rpx;
}

.empty {
  text-align: center;
  padding: 200rpx 0;
  color: #999;
}

.cart-footer {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #fff;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  border-top: 1rpx solid #eee;
}

.footer-right {
  display: flex;
  align-items: center;
}

.total-price {
  font-size: 32rpx;
  color: #ff4d4f;
  font-weight: bold;
  margin-right: 20rpx;
}

.checkout-btn {
  background-color: #409EFF;
  color: #fff;
  padding: 16rpx 48rpx;
  font-size: 28rpx;
}
