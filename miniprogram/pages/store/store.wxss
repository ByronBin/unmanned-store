/* pages/store/store.wxss */
.search-bar {
  padding: 20rpx;
  background-color: #fff;
}

.search-input {
  background-color: #f5f5f5;
  border-radius: 32rpx;
  padding: 16rpx 32rpx;
  font-size: 28rpx;
}

.store-list {
  padding: 20rpx;
}

.store-item {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  background-color: #fff;
  border-radius: 8rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.store-info {
  flex: 1;
}

.store-name {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.store-address {
  display: block;
  font-size: 24rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.store-phone {
  display: block;
  font-size: 24rpx;
  color: #999;
}

.store-status {
  padding: 10rpx 20rpx;
  border-radius: 4rpx;
  font-size: 24rpx;
}

.store-status.active {
  background-color: #f0f9ff;
  color: #409EFF;
}
