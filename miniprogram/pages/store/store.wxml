<!--pages/store/store.wxml-->
<view class="container">
  <view class="search-bar">
    <input class="search-input" placeholder="搜索门店" bindinput="onSearch" />
  </view>

  <view class="store-list">
    <view class="store-item" wx:for="{{stores}}" wx:key="id" bindtap="selectStore" data-id="{{item.id}}">
      <view class="store-info">
        <text class="store-name">{{item.name}}</text>
        <text class="store-address">{{item.address}}</text>
        <text class="store-phone">{{item.phone}}</text>
      </view>
      <view class="store-status {{item.status}}">
        {{item.status === 'active' ? '营业中' : '休息中'}}
      </view>
    </view>
  </view>
</view>
